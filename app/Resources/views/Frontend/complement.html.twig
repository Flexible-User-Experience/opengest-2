{% extends ':Frontend:base.html.twig' %}

{% block title %}Accesorios · {{ parent() }}{% endblock %}

{% block main %}
    <div class="container container-main">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="main-title">Accesorios</h1>
            </div>
        </div>
        <hr class="hr-divider">
        <div class="row">
            {% for complement in complements %}
                <div class="col-xs-9">
                    <div class="caption">
                        <h3 class="title no-m-top">
                            <a href="#">{{ complement.name }}</a>
                        </h3>
                        <p>{{ complement.shortDescription }}</p>
                        <p>
                            <a href="#">
                                <i class="fa fa-plus-square" aria-hidden="true"></i> Más información
                            </a>
                        </p>
                    </div>
                </div>
                <div class="col-xs-3">
                    {% if complement.mainImage is not null %}
                        <a href="#">
                            <img src="{{ vich_uploader_asset(complement, 'mainImageFile') | imagine_filter('480xY') }}" alt="{{ complement.name }}" class="img-responsive">
                        </a>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}