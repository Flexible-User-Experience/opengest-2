{% extends ':Frontend:base.html.twig' %}

{% block title %}{{ work.name }} · Trabajo · {{ parent() }}{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="main-title">Trabajos y clientes</h1>
                <a href="{{ path('front_works') }}"><i class="fa fa-caret-square-o-left" aria-hidden="true"></i> Todos los trabajos</a>
            </div>
        </div>
        <hr class="hr-divider">
        <div class="row">
            {# Left side #}
            <div class="col-sm-8">
                <h3 class="no-m-top">{{ work.name }}</h3>
                <p><strong>{{ work.date | date('d/m/Y') }}</strong></p>
                <h5>{{ work.shortDescription }}</h5>
                <p>{{ work.description | raw }}</p>
                {% if work.mainImage is not null %}
                    <img src="{{ vich_uploader_asset(work, 'mainImageFile') | imagine_filter('695xY') }}" class="img-responsive" alt="{{ work.name }}">
                {% endif %}
            </div>
            {# Right side #}
            <div class="col-sm-4">
                {% if work.service is not null %}
                    <p>Conozca el proceso de actuación en un trabajo que requiere una <strong>{{ work.service.name }}</strong></p>
                    <a class="btn btn-success" href="{{ path('front_service_detail', {slug: work.service.slug}) }}">Sí, habladme de este servicio</a>
                {% endif %}
                {% for img in work.images %}
                    {% if img.image is not null %}
                        <img src="{{ vich_uploader_asset(img, 'imageFile') | imagine_filter('112x150') }}" class="img-responsive" alt="{{ img.alt }}">
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        <hr class="hr-divider">
    </div>
{% endblock %}
