{% extends ':Mails:base.html.twig' %}

{% block subject %}Resposta{% endblock %}

{% block content %}
    <table class="row">
        <tbody>
        <tr>
            <th><img src="{{ absolute_url(asset('bundles/app/img/base-email-notification-gr.jpg')) }}"></th>
        </tr>
        </tbody>
    </table>
    <table class="row">
        <tbody>
        <tr>
            <th class="small-12 large-12 columns first last vertical-padding">
                <table>
                    <tr>
                        <th>
                            <h4>Bienvenido {{ contact.name }},</h4>
                            <p class="grey-color">En respusta a tu pregunta:</p>
                            <p class="grey-color">{{ contact.message }}</p>
                            <p class="grey-color">Te tenemos que decir que:</p>
                            <p>{{ contact.answer | nl2br }}</p>
                            <br>
                            <p class="grey-color">Saludos</p>
                        </th>
                        <th class="expander"></th>
                    </tr>
                </table>
            </th>
        </tr>
        </tbody>
    </table>
{% endblock %}
