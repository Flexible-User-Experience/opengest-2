{% extends ':Frontend:base.html.twig' %}

{% form_theme contactForm _self %}

{% block _app_bundle_contact_message_type_privacy_widget %}
    <div class="checkbox">
        <input type="checkbox" id="checkbox-privacy-homepage" {{ block('widget_attributes') }} />
        <label for="checkbox-privacy-homepage" class="control-label my-privacy-label-homepage">
            He leído, entiendo y acepto la política de privacidad y de protección de datos de GRUAS ROMANÍ, S.A. Para consultar la política de privacidad consultar el siguiente <a href="{{ path('front_privacy')}}">enlace</a>.
        </label>
    </div>
{% endblock %}

{% block title %}Empresa · {{ parent() }}{% endblock %}

{% block main %}
    <div class="container container-main">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="main-title no-m">Grúas Romaní</h1>
                <h2 class="main-subtitle no-m-top">Alquiler de plataformas aéreas sobre camión para la elevación de personal a grandes alturas.</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <h3 class="c-yellow no-m-bottom"><strong>Plataformas aéreas sobre camión</strong></h3>
            </div>
        </div>
        <hr class="hr-divider">
        <div class="row">
            <div class="col-sm-8">
                <img src="{{ asset('bundles/app/img/ruthmann-steiger-aerial-lift-at-gruas-romani-1.jpg') | imagine_filter('1200xY') }}" alt="imagen empresa" class="img-responsive">
            </div>
            <div class="col-sm-4">
                <div class="panel yellow-background-light">
                    <div class="panel-heading">
                        {% include ':Includes:notice_flash.html.twig' %}
                        {% block side_form %}
                            {{ form(contactForm) }}
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
